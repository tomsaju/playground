<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.tom.playground">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.Camera" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="com.parse.APPLICATION_ID"
        android:value="@string/parse_app_id" />

    <application
        android:name=".dagger2.ProntoShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".firebase.SignUpActivity" />
        <activity android:name=".firebase.LoginActivity" />
        <activity android:name=".firebase.ProfileActivity" />
        <activity android:name=".parse.ParseTestActivity" />
        <activity android:name=".dagger2.DaggerActivity" />
        <activity android:name=".rxjava.RxjavaActivity" />
        <activity
            android:name=".augmentedreality.AugmentedCameraActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".augmentedreality.HorizonActivity" />
        <activity android:name=".notes.NoteEditorActivity"></activity>
    </application>

</manifest>